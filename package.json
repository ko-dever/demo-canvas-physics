{
  "name": "playground-canvas-balls",
  "version": "1.0.0",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^4.19.1"
  },
  "dependencies": {
    "parcel-bundler": "^1.7.0"
  },
  "scripts": {
    "lint-init": "./node_modules/.bin/eslint --init",

    "clear": "npm run clear:cache & npm run clear:dist",
    "clear:cache": "rm -rf .cache/",
    "clear:dist": "rm -rf dist/",

    "dev": "./node_modules/.bin/parcel ./src/index.html --open",
    "build": "rm -rf dist/ ; ./node_modules/.bin/parcel build ./src/index.html --public-url ./ --no-cache"
  }
}
